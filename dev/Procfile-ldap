slapd: env BIN=$BIN:/usr/bin:/usr/sbin python dev/ldap-server.py
canaille: env CANAILLE__DATABASE=ldap FLASK_DEBUG=1 AUTHLIB_INSECURE_TRANSPORT=1 ENV_FILE=.env CONFIG=dev/conf/canaille.toml FLASK_APP=dev.devapp flask run --extra-files dev/conf/canaille.toml --extra-files "$CANAILLE__THEME"
client1: env FLASK_DEBUG=1 CONFIG=../conf/client1.cfg FLASK_APP=dev.client flask run --port=5001
client2: env FLASK_DEBUG=1 CONFIG=../conf/client2.cfg FLASK_APP=dev.client flask run --port=5002
maildump: maildump
